@{
    ViewBag.Title = "Product";
    Layout = "~/Areas/GuanWang/Views/Shared/_LayoutPageManager.cshtml";
}

<div class="form-inline definewidth m20">
</div>
<table class="table table-bordered table-hover definewidth m10">
    <thead>
        <tr>
            <th>编号id</th>
            <th>标题</th>
            <th width="50%">描述</th>
            <th>图片</th>
            <th>类型</th>
            <th>添加时间</th>
            <th>操作</th>
        </tr>
    </thead>
    @{List<Model.guanwang_vyw_product_type> list = ViewData["list"] as List<Model.guanwang_vyw_product_type>;}
    @foreach (var item in list)
    {
        <tr>
            <td>@item.productID</td>
            <td>@item.title</td>
            <td>@item.describe</td>
            <td><img src="@item.image" style="width:100px;height:80px;" /></td>
            <td>@item.name</td>
            <td>@Convert.ToDateTime(item.addTime).ToString("yyyy-MM-dd HH:mm:ss")</td>
            <td>
                <a href="/GuanWang/ManagerHome/ProductEdit/@item.productID">编辑</a>
            </td>
        </tr>	
    }
</table>


