@{
    ViewBag.Title = "ProductTypeEdit";
    Layout = "~/Areas/GuanWang/Views/Shared/_LayoutPageManager.cshtml";
}

@{Model.guanwang_product_type casetype = ViewData["model"] as Model.guanwang_product_type;}

<div class="definewidth m20">
    <table class="table table-bordered table-hover definewidth m10">
        <tr>
            <td width="10%" class="tableleft">类型名称</td>
            <td>
                <input type="text" name="username" id="txtname" placeholder="请输入类型名称" value="@casetype.name"/></td>
        </tr>     
        <tr>
            <td class="tableleft"></td>
            <td>
                <button class="btn btn-primary" onclick="btn_save()">保存</button>
                &nbsp;&nbsp;
                <button type="button" class="btn btn-success" name="backid" id="backid">返回列表</button>
            </td>
        </tr>
    </table>
</div>

@section footer{
    <script>
        $(function () {
            $('#backid').click(function () {
                window.location.href = "ProductType";
            });
        });


        //提交表单
        function btn_save() {
            var name = $("#txtname").val();
            if (name==""||name==null) {
                $("#txtname").focus();
                alertMsg("类型名称不能为空！");
                return;
            }
           
         

            var pams = {
                id:'@casetype.typeID',
                name:name
            };

            $.post("ProductTypeEdit", pams, function (serverData) {
                var jsondata = $.parseJSON(serverData);
                if (jsondata.status == 0) {
                    alertMsg(jsondata.msg);
                    window.location = 'ProductType';
                } else {
                    alertMsg(jsondata.msg);
                }
            });
        }
    </script>
}

